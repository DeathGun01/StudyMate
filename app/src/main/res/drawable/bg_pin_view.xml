<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_selected="true">
    <shape android:shape="rectangle" android:tint="@color/background_color">
        <stroke android:color="@color/button_normal_color" android:width="1dp"/>
    </shape>
</item>
    <item android:state_focused="true">
        <shape android:shape="rectangle" android:tint="@color/background_color">
            <stroke android:color="@color/input_field_hint_color" android:width="1dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle" android:tint="@color/background_color">
            <stroke android:color="@color/body_text_color" android:width="1dp"/>
        </shape>
    </item>
</selector>