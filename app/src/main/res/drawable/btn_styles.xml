<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/button_pressed_color" />
            <corners android:radius="5dp" />
            <!--<padding android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp" />-->
            <!--<stroke android:width="1dp" android:color="@color/button_pressed_color"/>-->
        </shape>
    </item>


    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_focused_color" />
            <!--<padding android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp" />-->
            <corners android:radius="5dp" />
        </shape>
    </item>


    <item android:state_hovered="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_hovered_color" />
            <!--<padding android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp" />-->
            <corners android:radius="5dp" />
        </shape>
    </item>


    <item>
        <shape>
            <solid android:color="@color/button_normal_color" />
            <!--<padding android:top="1dp" android:bottom="1dp" android:left="1dp" android:right="1dp" />-->
            <corners android:radius="5dp" />
            <!--<stroke android:width="1dp" android:color="@color/button_normal_color"/>-->
        </shape>
    </item>

</selector>